@using Entities.Entities.Enums
@model Entities.Entities.Contas

@{
    ViewData["Title"] = "Editar";
}

<h4>Editar - Conta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdConta" />
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Status">Status Conta: </label>
                @{
                    if (Model.Status != EnumStatus.Ativado)
                    {
                        <div class="form-check form-check-inline">
                            <label>
                                <span class="glyphicon glyphicon-hand-right" aria-hidden="true">
                                    <input type="radio" class="form-check-input" asp-for="Status" value="@EnumStatus.Ativado" unchecked />
                                    Ativado
                                </span>
                            </label>

                            <label>
                                <span class="glyphicon glyphicon-hand-right" aria-hidden="true">
                                    <input type="radio" class="form-check-input" asp-for="Status" value="@EnumStatus.Desativado" checked />
                                    Desativar
                                </span>
                            </label>
                        </div>
                    }
                    else
                    {
                        <div class="form-check form-check-inline">
                            <label>
                                <span class="glyphicon glyphicon-hand-right" aria-hidden="true">
                                    <input type="radio" class="form-check-input" asp-for="Status" value="@EnumStatus.Ativado" checked />
                                    Ativado
                                </span>
                            </label>

                            <label>
                                <span class="glyphicon glyphicon-hand-right" aria-hidden="true">
                                    <input type="radio" class="form-check-input" asp-for="Status" value="@EnumStatus.Desativado" unchecked />
                                    Desativar
                                </span>
                            </label>
                        </div>
                    }
                }
            </div>
            <div class="form-group">
                <label for="TipoDespesas">Tipo Despesas: </label>
                @{
                    if (Model.TipoDespesas != EnumTipoDespesas.Receita)
                    {
                        <div class="form-check form-check-inline">
                            <label>
                                <span class="glyphicon glyphicon-hand-right" aria-hidden="true">
                                    <input type="radio" class="form-check-input" asp-for="TipoDespesas" value="@EnumTipoDespesas.Receita" unchecked />
                                    Receita
                                </span>
                            </label>

                            <label>
                                <span class="glyphicon glyphicon-hand-right" aria-hidden="true">
                                    <input type="radio" class="form-check-input" asp-for="TipoDespesas" value="@EnumTipoDespesas.Despesas" checked />
                                    Despesas
                                </span>
                            </label>
                        </div>
                    }
                    else
                    {
                        <div class="form-check form-check-inline">
                            <label>
                                <span class="glyphicon glyphicon-hand-right" aria-hidden="true">
                                    <input type="radio" class="form-check-input" asp-for="TipoDespesas" value="@EnumTipoDespesas.Receita" checked />
                                    Receita
                                </span>
                            </label>

                            <label>
                                <span class="glyphicon glyphicon-hand-right" aria-hidden="true">
                                    <input type="radio" class="form-check-input" asp-for="TipoDespesas" value="@EnumTipoDespesas.Despesas" unchecked />
                                    Despesas
                                </span>
                            </label>
                        </div>
                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
